@*Partial View that builds dynamic Category list to Filter Book List*@

@model IEnumerable<string>

<a class="btn btn-block btn-outline-secondary" asp-action="Index" asp-controller="Home" asp-route-genre="">
    Home
</a>

@foreach (string genre in Model)
{
    <a class="btn btn-block @(genre== ViewBag.SelectedCat ? "btn-primary" : "btn-outline-primary")"
       asp-action="Index" asp-controller="Home"
       asp-route-genre="@genre"
       asp-route-page="1">
        @genre
    </a>
}
